<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="ibratec.recife.pe.br.ibratecexercicios.Exercicio03_ScrollView">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- LINEAR LAYOUT -->

        <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"

            tools:context="ibratec.recife.pe.br.ibratecexercicios.Exercicio03_LinearLayout">

            <TextView
                android:id="@+id/ltextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:text="LINEARLAYOUT" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ll1textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="TEXT" />

                <EditText
                    android:id="@+id/ll1editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:hint="EDITTEXT"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ll2textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="TEXT" />

                <EditText
                    android:id="@+id/ll2editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:hint="EDITTEXT"/>

            </LinearLayout>

            <Button
                android:id="@+id/lbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="BUTTON" />


        </LinearLayout>

        <!-- GRID LAYOUT -->

        <GridLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"

            tools:context="ibratec.recife.pe.br.ibratecexercicios.Exercicio03_GridLayout">

            <TextView
                android:id="@+id/gtextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"

                android:text="GRIDLAYOUT" />

            <TextView
                android:id="@+id/gl1textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:layout_row="1"
                android:layout_column="0"

                android:text="TEXT" />

            <EditText
                android:id="@+id/gl1editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:layout_row="1"
                android:layout_column="1"

                android:hint="EDITTEXT"/>

            <TextView
                android:id="@+id/gl2textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:layout_row="2"
                android:layout_column="0"

                android:text="TEXT" />

            <EditText
                android:id="@+id/gl2editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:layout_row="2"
                android:layout_column="1"

                android:hint="EDITTEXT"/>

            <Button
                android:id="@+id/gbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"

                android:text="BUTTON" />

        </GridLayout>

        <!-- TABLE LAYOUT -->

        <TableLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context="ibratec.recife.pe.br.ibratecexercicios.Exercicio03_TableLayout">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ttextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_span="2"

                    android:textAlignment="center"
                    android:text="TABLELAYOUT" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tl1textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="TEXT" />

                <EditText
                    android:id="@+id/tl1editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:hint="EDITTEXT"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tl2textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="TEXT" />

                <EditText
                    android:id="@+id/tl2editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:hint="EDITTEXT"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tbutton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_span="2"

                    android:textAlignment="center"
                    android:text="BUTTON" />

            </TableRow>

        </TableLayout>

        <!-- RELATIVE LAYOUT -->

        <RelativeLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/black"

            tools:context="ibratec.recife.pe.br.ibratecexercicios.Exercicio03_RelativeLayout">

            <!--
                 android:layout_alignParentRight="true"
                 android:layout_alignTop="@+id/textView1"
                 android:layout_toRightOf="@+id/btnButton3"
            -->

            <TextView
                android:id="@+id/l1textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textAlignment="center"
                android:background="@android:color/holo_red_light"
                android:textColor="#0f0e0e"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="RED" />

            <TextView
                android:id="@+id/l1textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l1textView1"
                android:textAlignment="center"
                android:background="@android:color/holo_orange_dark"
                android:textColor="#0f0e0e"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ORANGE" />

            <TextView
                android:id="@+id/l1textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l1textView2"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:background="#e1ff02"
                android:textColor="#0f0e0e"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="YELLOW" />

            <TextView
                android:id="@+id/l2textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:textAlignment="center"
                android:background="#0ac407"
                android:textColor="#0f0e0e"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GREEN" />

            <TextView
                android:id="@+id/l2textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:layout_toRightOf="@+id/l2textView1"
                android:textAlignment="center"
                android:background="#0610a3"
                android:textColor="#fcfcfc"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BLUE" />

            <TextView
                android:id="@+id/l2textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:layout_toRightOf="@+id/l2textView2"
                android:textAlignment="center"
                android:background="#8407c6"
                android:textColor="#fcfcfc"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="INDIGO" />

            <TextView
                android:id="@+id/l3textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                android:textAlignment="center"
                android:background="#ef62da"
                android:textColor="#0f0e0e"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="VIOLET" />


        </RelativeLayout>

        <!-- CARD VIEW -->

        <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:padding="5dp"

            tools:context="ibratec.recife.pe.br.ibratecexercicios.Exercicio03_CardView">

            <android.support.v7.widget.CardView

                android:id="@+id/card_view1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="2dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/australia" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fcfcfc"
                    android:text="AustrÃ¡lia" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:id="@+id/card_view2"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="2dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/china" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fcfcfc"
                    android:text="China" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
